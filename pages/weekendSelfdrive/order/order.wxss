/* order.wxss */
@charset "UTF-8";
@import "../week.wxss";
.container {padding-bottom: 200rpx;}
.form-submitBtn-one .submit .price{font-size: 25rpx;}
.form-submitBtn-one .submit .num{font-size: 50rpx;padding:0 10rpx;}


.group{padding: 10rpx 0;color:rgb(134,134,134);}
.group .item-id{height: 50rpx ;line-height: 50rpx;}
.item-name{color:#000;}

.firstMsg{padding: 20rpx 0 20rpx 30rpx ;background:#fff;font-size:28rpx;line-height:45rpx;color:rgb(134,134,134);}
.left-border{border-left:1rpx solid #22a2ae;padding:20rpx 50rpx;color:#22a2ae;}

.form-submitBtn-one{text-align: center;font-size: 28rpx;padding: 0;color:#999999;}
.form-submitBtn-one image{width: 30rpx;height: 30rpx;display: block;margin:4rpx auto;}
.form-submitBtn-one .price{font-size: 28rpx;flex: 2;padding:10rpx 30rpx;text-align: left;}
.form-submitBtn-one .price .rmb{color:#fe5b35;font-size: 25rpx;}
.form-submitBtn-one .price .num{font-size: 50rpx;padding:0 10rpx;color:#fe5b35;}
.form-submitBtn-one .order-list{border-left:1rpx solid #e5e5e5;padding:10rpx 0;font-size:26rpx;}
.form-submitBtn-one .submit{flex: 1.5;font-size: 36rpx;border-radius: 0;background:#22a2ae;height: 100rpx;line-height: 100rpx;}



.icon-doubt{
    width: 32rpx;
    vertical-align: top;
    margin:0 10rpx;
    padding-top: 4rpx 0;
}
#modal-container{
    position: fixed;
    top:0;
    left: 0;
    width:100%;
    height: 100%;
    z-index: 100;
    background-color: rgba(0,0,0,.7);
}
.modal-content{
    color: #333;
    font-size: 28rpx;
    line-height: 1.6;
    width: 89%;
    transform: translate(-50%,-52%);
    position: absolute;
    top: 50%;
    left: 50%;

}
.modal-content text{
    border-radius: 16rpx 16rpx;
    padding: 30rpx;
    box-sizing: border-box;
    background-color: #fff;
    display:block;
}
.modal-content image{
    width: 60rpx;
    display: block;
    margin: 40rpx auto 0;
}

.getPhone{
	position: absolute;
	z-index: 2;
	right: 20rpx;
	width: 170rpx;
	height: 50rpx;
	background: url('https://za-tac.oss-cn-hzfinance.aliyuncs.com/wxapp/wxapp_seasiatravelins/images/getphone.png') no-repeat;
	background-size: 100% auto;
}
.getPhone::after{
	border: none;
}

.display{display: none}