page{
    padding-bottom:100rpx;
}
.head{
    /* width:100%; */
    height:88rpx;
    background-color:#fff;
    border-top:1rpx solid rgba(0,0,0,0.05);
    border-bottom:1rpx solid rgba(0,0,0,0.05);
    position: relative;
    margin-left:0;
    margin-right:0;
}
.nav {
    /* width: 100%; */
    height: 88rpx;
    display: flex;
    flex-direction: row;
    box-shadow: 0 4px 7px 0 rgba(43,64,66,0.10);
}
.default {
    line-height: 88rpx;
    text-align: center;
    flex: 1;
    font-size: 32rpx;
    letter-spacing: 0;
    min-width:30%;
}

.bold {
    line-height: 88rpx;
    text-align: center;
    flex: 1;
    font-size: 32rpx;
    color: #22A2AE;
    position: relative;
     min-width:30%;
}
.border::after{
    content:" ";
    position:absolute;
    top:87rpx;
    left:45%; 
    width:40rpx;
    border-bottom: 4rpx solid #22A2AE;
    text-align: center;
}
.show {
    display: block;
    height:100%;
}
.hidden {
    display: none;
    height:100%;
}
.server{
    background-color:#fff;

}
.server-tips{
    text-align: center; 
   /* padding:5rpx 0; */
}
.server1{
    font-size: 24rpx;
    color: #80AEB3;
    padding:30rpx 0 40rpx 0;
  
}
.question::after{
    width:11rpx;
    height:11rpx;
    line-height:14rpx;
    text-align: center;
    padding: 4px 4.5px 4px 3px;
    margin-left:8rpx;
    font-size: 11px;
    content: "?";
    display: inline-block;
    border-radius: 100%;
    color:rgba(128,174,179,0.5);
    border:1rpx solid rgba(128,174,179,0.5);
}
.rule{
    background:rgba(0,0,0,0.7);
}
.rule-con{
    padding:50rpx;
    width:74%;
    margin-left:6%;
    margin-top:34%;
    background: #FFFFFF;
    border-radius: 20rpx;
}
.con-title{
    text-align: center;
    font-size: 36rpx;
    color: #333333;
}
.con-con{
    padding-top:20rpx;
    font-size:28rpx;
    color:#666;
    /* line-height:30rpx; */
}
.con-flex{
    display: flex;
    justify-content:space-between;
    flex-flow: wrap;
    padding:20rpx 0;
}
 .con-flex1{
    flex:1;
     margin-bottom:25rpx;
    text-align:center;
    color:#22A2AE;
    font-size:24rpx; 
}
.con-flex1.u-1of2{
   flex: 0 0 50%;
}
.three{
     flex:1;
    min-width:33%; 
    max-width:33%; 
    font-size:23.9rpx;  
    margin-bottom:25rpx;
    text-align:center;
    color:#22A2AE;
}
.con-flex1-image{
    width:34rpx;
    height:34rpx;
    /* margin-bottom:15rpx; */
}
.save-center{
     height:60rpx; 
    padding-left:35rpx;
    /* padding-top:11rpx;  */
    border-top:1rpx solid rgba(0,0,0,0.05);
    border-bottom:1rpx solid rgba(0,0,0,0.05);
    font-size:22rpx;
    color:#999;
    position:relative;
}

.save-type{
    width:100%;
    background-color:#fff;
    margin-top:30rpx;
}
.type1{
    margin-left:30rpx;
}
.save-title1{
    font-size:32rpx;
    color:#333;
    padding:27rpx 0;
    border-bottom:1rpx solid rgba(0,0,0,0.05);
}
.save-server1{
    padding:25rpx 0;
    font-size:28rpx;
    color:#666;
    border-bottom:1rpx solid rgba(0,0,0,0.05);
}
.save-server1 .save-server1-title{
    position: relative;
    padding-right:40rpx;
}
.arrow:after{
               content: "";   
                position: absolute;     
                top: 16rpx; 
                width: 15rpx; 
                height: 15rpx; 
                margin-top: -4rpx;  
                right: 30rpx;  
                border: solid 1rpx #666;  
                border-left: none;  
                border-bottom: none; 
                transition: transform .3s;  
                transform-origin: 66% 33%;  
                border-radius:0;
                transform: rotate(135deg);
}
.active .arrow::after{ 
       transform: rotate(-45deg);     
 } 

.save-server1 .txt{
    display:none;
}
 
 .active .txt{ 
      display: block;  
      padding-top:10rpx;
      padding-right:30rpx;
      color:#999;
 } 
.con-show{
    font-size:28rpx;
    color:#999;
}
.con-show view{
  padding-top:2rpx;
  padding-bottom:2rpx;
}
.hidden{
    display: none;
}
.rescue-phone{
   position: fixed;
    bottom:30rpx;
     left:23%;  
    width:50%;
    background-image: linear-gradient(-89deg, #6CE7CC 0%, #22A2AE 100%);
    box-shadow: 0 4rpx 7rpx 0 rgba(43,64,66,0.16);
    border-radius: 100rpx;
    font-size:36rpx;
    color:#fff;
     text-align: center; 
     padding:18rpx 0rpx 18rpx 47rpx; 
}
.rescue-phone image{
    width:34rpx;
    height:38rpx;
    position:absolute;
    top:24%;
    left:18%;
}
